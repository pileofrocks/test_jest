{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/src",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "traceResolution": false,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["src/apps/api/*"],
      "@models/*": ["src/models/*"],
      "@service/*": ["src/service/*"],
      "@src/*": ["src/*"],
      "@context": ["src/context"]
    }
  },
  "include": [
    "script/**/*",
    "src/**/*",
    "typings"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "tests",
    "test/**/*",
    "test_reports",
    "example_json",
    "migration",
    "jest.config.js",
    "ormconfig.js",
    "paths.js",
    "dist"
  ]
}
